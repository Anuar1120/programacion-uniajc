//Definir costante
Costo_materia_prima <- 2.50
Costo_empaque <- 0.50
Porcentaje_ganancia <- 0.30
Barras-por-caja <- 10
barras producidas en un dia: "N"
leer N
//Calcular el costo de produccion total
Costo_produccion_total <- (costo_produccion_total + Costo_empaque)* N 
//Calculo del precio de venta por barra
precio_venta_barra <- (Costo_materia_prima + Costo_empaque) * (1 + Porcentaje_ganancia)
//calculo del ingreso total
Ingreso_total <- Precio_venta_barra * N 
//Calculo de numero de cajas necesarias
Cajas_llenas <- N DIV
(Barras_por_caja)
Barras_sobrantes <- N MOD
Barras_por_caja
